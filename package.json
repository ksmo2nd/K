{
  "name": "kswifi-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend:dev\"",
    "build": "npm run backend:build && npm run frontend:build",
    "start": "concurrently \"npm run backend:start\" \"npm run frontend:start\"",
    "frontend:dev": "cd frontend && npm run dev",
    "frontend:build": "cd frontend && npm run build",
    "frontend:start": "cd frontend && npm start",
    "backend:dev": "cd backend && uvicorn app.main:app --reload --host 0.0.0.0 --port 8000",
    "backend:build": "cd backend && pip install -r requirements.txt",
    "backend:start": "cd backend && uvicorn app.main:app --host 0.0.0.0 --port 8000",
    "mobile:ios": "cd frontend && npm run build && npx cap sync && npx cap open ios",
    "mobile:android": "cd frontend && npm run build && npx cap sync && npx cap open android",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd frontend && npm test",
    "test:backend": "cd backend && python -m pytest",
    "docker:dev": "docker-compose up",
    "docker:build": "docker-compose build",
    "docker:start": "docker-compose up -d",
    "docker:stop": "docker-compose down"
  },
  "devDependencies": {
    "concurrently": "^9.1.0"
  }
}